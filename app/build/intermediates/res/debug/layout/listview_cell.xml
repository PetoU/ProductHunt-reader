<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_8">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_votes">

        <TextView
            android:id="@+id/votes"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_8"
            android:text="@string/VOTES"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/votes"
            android:src="@drawable/triangle" />

        </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_8"
        android:layout_toRightOf="@id/layout_votes"
        android:text="@string/NAME" />

    <TextView
        android:id="@+id/description"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layout_votes"
        android:layout_below="@+id/name"
        android:layout_marginLeft="@dimen/padding_8"
        android:text="@string/DESCRIPTION" />

</RelativeLayout><!-- From: file:/Users/PetoU/Documents/AndroiStudioProjects/ProductHunt/app/src/main/res/layout/listview_cell.xml -->